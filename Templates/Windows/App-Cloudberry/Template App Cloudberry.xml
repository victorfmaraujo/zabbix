<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-04-07T18:45:55Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App Cloudberry</template>
            <name>Template App Cloudberry</name>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Cloudberry - JOBS</name>
                </application>
                <application>
                    <name>Cloudberry - STORAGE</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Descoberta de Jobs</name>
                    <key>discovery[discovery.job]</key>
                    <delay>6h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#JOBNAME}</macro>
                                <value>{$JOB.NOTMATCH}</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>Status do Job {#JOBNAME}</name>
                            <key>coleta[job, {#JOBID},.]</key>
                            <delay>1h</delay>
                            <applications>
                                <application>
                                    <name>Cloudberry - JOBS</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>CloudBerry Status</name>
                            </valuemap>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;3</expression>
                                    <name>Verificar tarefa {#JOBNAME} do Cloudberry</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Descoberta de Storages</name>
                    <key>discovery[discovery.storage]</key>
                    <delay>6h</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>Espa√ßo ocupado em {#STORAGENAME}</name>
                            <key>coleta[storage,.,{#STORAGEID}]</key>
                            <delay>1h</delay>
                            <units>B</units>
                            <applications>
                                <application>
                                    <name>Cloudberry - STORAGE</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$JOB.NOTMATCH}</macro>
                    <value>^Check</value>
                </macro>
            </macros>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>CloudBerry Status</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Nunca Executado</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Falha</newvalue>
                </mapping>
                <mapping>
                    <value>2</value>
                    <newvalue>Alerta</newvalue>
                </mapping>
                <mapping>
                    <value>3</value>
                    <newvalue>Sucesso</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
